<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true" />

    <package name="assignment3" extends="struts-default">
        <action name="index">
            <result>/index.jsp</result>
        </action>
    </package>
    
    <include file="login.xml"></include>
    
    <package name="welcome" extends="struts-default">
        <action name="welcome-admin" class="com.assignment3.actions.WelcomeAdmin">
            <result name="success">/welcome_admin.jsp</result>
        </action>
        <action name="welcome-user" class="com.assignment3.actions.WelcomeUser">
            <result name="success">/welcome_user.jsp</result>
        </action>
    </package>

</struts>