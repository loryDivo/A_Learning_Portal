<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    
    <package name="userArea" extends="default">
        <action name="welcome" class="com.assignment3.actions.userArea.WelcomeAction">
            <result name="success">/JSP/userArea/welcome.jsp</result>
        </action>
        
		<action name="edit-user" class="com.assignment3.actions.userArea.EditUserAction">
            <result name="success">/JSP/userArea/editUser.jsp</result>
        </action>
        <action name="doEditUser" class="com.assignment3.actions.userArea.DoEditUserAction">
            <result name="success" type="redirectAction">
		        <param name="actionName">welcome</param>
		        <param name="namespace">/</param>
		    </result>
		    <result name="input">/JSP/userArea/editUser.jsp</result>
        </action>
        <action name="doEditPassword" class="com.assignment3.actions.userArea.DoEditPasswordAction">
            <result name="success" type="redirectAction">
		        <param name="actionName">welcome</param>
		        <param name="namespace">/</param>
		    </result>
		    <result name="input">/JSP/userArea/editUser.jsp</result>
        </action>
        <action name="doEditBan" class="com.assignment3.actions.userArea.DoEditBanAction">
            <result name="success" type="redirectAction">
		        <param name="actionName">welcome</param>
		        <param name="namespace">/</param>
		    </result>
		    <result name="input">/JSP/userArea/editUser.jsp</result>
        </action>
        <action name="doEditCourse" class="com.assignment3.actions.userArea.DoEditCourseAction">
            <result name="success">/JSP/userArea/adding_course.jsp</result>
        </action>
        <action name="editCourse" class="com.assignment3.actions.userArea.EditCourseAction">
            <result name="success" type="redirectAction">
		        <param name="actionName">welcome</param>
		        <param name="namespace">/</param>
		    </result>
        </action>
    </package>
    
</struts>